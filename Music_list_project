<body>

<header>ULTIMATE GRUNGE SONG COLLECTION</header>

<div class="container">

    <h2>Добавить песню</h2>
    <form id="songForm">
        <input id="title" type="text" placeholder="Название песни" required>
        <input id="artist" type="text" placeholder="Исполнитель" required>
        <input id="year" type="number" placeholder="Год">
        <input id="genre" type="text" placeholder="Жанр (Grunge, Rock...)">
        <input id="cover" type="text" placeholder="URL обложки">
        <input id="audio" type="text" placeholder="URL аудио (mp3)">
        <button id="addBtn" type="submit">Добавить</button>
    </form>

    <h2>Коллекция песен</h2>

    <table>
        <thead>
            <tr>
                <th>#</th>
                <th>Обложка</th>
                <th>Песня</th>
                <th>Исполнитель</th>
                <th>Год</th>
                <th>Жанр</th>
                <th>Действия</th>
            </tr>
        </thead>

        <tbody id="tableBody">
            <tr class="empty">
                <td colspan="7">Пусто… как репточка в 3:17 утра перед концертом.</td>
            </tr>
        </tbody>
    </table>

    <audio id="player" controls style="display:none;"></audio>

</div>

<script>
    const form = document.getElementById("songForm");
    const tableBody = document.getElementById("tableBody");
    const player = document.getElementById("player");

    let songs = JSON.parse(localStorage.getItem("songs") || "[]");

    form.addEventListener("submit", e => {
        e.preventDefault();

        const song = {
            title: title.value.trim(),
            artist: artist.value.trim(),
            year: year.value.trim(),
            genre: genre.value.trim(),
            cover: cover.value.trim(),
            audio: audio.value.trim()
        };

        songs.push(song);
        save();
        form.reset();
        render();
    });

    function save() {
        localStorage.setItem("songs", JSON.stringify(songs));
    }

    function render() {
        tableBody.innerHTML = "";

        if (songs.length === 0) {
            tableBody.innerHTML = `<tr class="empty">
                <td colspan="7">Тишина… последняя нота ещё висит в воздухе.</td>
            </tr>`;
            return;
        }

        songs.forEach((song, i) => {
            tableBody.innerHTML += `
                <tr>
                    <td>${i + 1}</td>
                    <td><img class="cover" src="${song.cover || "https://i.imgur.com/6YV6XQw.png"}"></td>
                    <td>${song.title}</td>
                    <td>${song.artist}</td>
                    <td>${song.year || "-"}</td>
                    <td>${song.genre || "-"}</td>
                    <td>
                        <button class="action-btn play-btn" onclick="playSong('${song.audio || ""}')">▶</button>
                        <button class="action-btn edit-btn" onclick="editSong(${i})">✎</button>
                        <button class="action-btn delete-btn" onclick="deleteSong(${i})">✖</button>
                    </td>
                </tr>
            `;
        });
    }

    function playSong(url) {
        if (!url) {
            alert("Аудио не добавлено!");
            return;
        }
        player.src = url;
        player.style.display = "block";
        player.play();
    }

    function editSong(i) {
        const s = songs[i];

        title.value = s.title;
        artist.value = s.artist;
        year.value = s.year;
        genre.value = s.genre;
        cover.value = s.cover;
        audio.value = s.audio;

        deleteSong(i);
    }

    function deleteSong(i) {
        songs.splice(i, 1);
        save();
        render();
    }

    render();
</script>

</body>
</html>
